@inherits LayoutComponentBase
<FluentDesignSystemProvider AccentBaseColor="#4bedff">
    <FluentMainLayout NavMenuTitle="Navigation menu" NavMenuWidth="30">

        <!-- Header -->
        <Header>
            <div class="custom-header">
                <img src="@AITLogoUrl" height="32" alt="@Name Logo" class="logo-content" />
                <FluentLabel Typo="Typography.Body" Appearance="Appearance.Neutral" Color="@Color.Neutral"
                    class="header-label">
                    ASAP Knowledge Navigator: EDGAR Research Assistant
                </FluentLabel>
            </div>
        </Header>

        <Body>
            @Body
        </Body>
        <NavMenuContent>
            <NavMenu />
        </NavMenuContent>
    </FluentMainLayout>
</FluentDesignSystemProvider>

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />
<FluentMenuProvider />
